###############################################################################
#
#   touch-file.cf - autorun policy for touch file in /tmp 
#
###############################################################################

bundle agent touch-file.cf 
{
methods:
        "Create file in /tmp" usebundle => bundle("arg");

files: 
"/tmp/foo"
create => true, 

reports: 
verbose_mode:: 
"$(this.bundle): foo creation in /tmp";  

}
