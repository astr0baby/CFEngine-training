body common control

{
      bundlesequence => { "mounts" };
}

#

bundle agent mounts

{
  storage:

      "/mnt" mount  => nfs("nfsutl01.webhuis.nl","/");

}

######################################################################

body mount nfs(server,source)

{
      mount_type => "nfs";
      mount_source => "$(/)";
      mount_server => "$(nfsutl01.webhuis.nl)";
      #mount_options => { "rw" };
      edit_fstab => "true";
      unmount => "true";
}

