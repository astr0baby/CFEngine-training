###############################################################################
#
#   motd_set - autorun policy for setting /etc/motd   
#
###############################################################################

bundle agent motd_set 
{

files: 
"/etc/motd"
create => "true", 
edit_line => insert_lines('This system is managed by CFEngine"3"');

reports: 
verbose_mode:: 
"$(this.bundle): set /etc/motd";  

}
