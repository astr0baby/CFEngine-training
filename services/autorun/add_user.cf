bundle agent add_user 
{
  vars:
  "users" slist => { "cfetest"};
  users:
    "$(users)"
    policy => "present",
    home_dir => "/home/$(users)",
    group_primary => "users", 
    roup_secondary => "
    shell => "/bin/bash/",
    home_bundle => setup_home_dir("$(users)");

}

bundle agent setup_home_dir(users)
{
  vars:
    "keys" slist => { "authorized_keys"};
  files:
   "/home/$(users)/.ssh/$(keys)" 
     perms => mog("700", "$(users)","users", 
     create => "true"; 
    "/home/$(users)/.ssh/$(keys)" edit_line => edit_pub_key; 
}





   
bundle edit_line edit_pub_key 
{ 
insert_lines: 
"ssh-rsa  martin@cfe-roadshow";
}   

