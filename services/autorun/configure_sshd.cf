bundle agent configure_sshd
{
services:
"ssh";

files: 
debian:: 
"/etc/ssh/sshd_config"
comment => "Allow direct root login for test",
edit_line => replace_or_add(".*PermitRootLogin.*","PermitRootLogin no");


centos_6:: 
"/etc/ssh/sshd_config"
comment => "Allow direct root login for test",
edit_line => replace_or_add(".*PermitRootLogin.*","PermitRootLogin no");

reports:
"Configure /etc/ssh/sshd_conf";

}

bundle agent restart_sshd {

commands:
 "service ssh restart"
     handle => "restart_sshd",
    comment => "restarting sshd";

}
